<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
   <!-- 클래스 등록 -->
   <!-- 
     DI : 주입
          1) setter에 값 주입
          2) 생성자에 값 주입
          3) 메소드 호출 (생성시, 소멸시)
          ==========================
                       컨테이너
           BeanFactory : core (DI)
                |
           ApplicationContext : core (DI,AOP)
                | 
          ========================================
          |                                      |
        GenericApplcationContext             AnnotationConfigApplicationContext
                    |     
           WebApplicationContext (MVC)     
    -->
   <bean id ="sa1" class="com.sist.di1.Sawon">
   <!-- 멤버 변수의 값을 주입 : setter DI -->
     <property name="sabun" value="1"/>
     <!-- sal.setSabun(1) -->
     <property name="name">
       <value>홍길동</value>
     </property>
     <property name="dept" value="개발부"/>
     <property name="job" value="대리"/>
     <property name="pay" value="3000"/>
   </bean>
</beans>
